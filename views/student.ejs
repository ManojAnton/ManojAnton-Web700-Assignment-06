<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <% if (viewData && viewData.student) { %>
                <h2 class="text-center mb-4">Update Student</h2>
                <form method="POST" action="/student/update">
                    <input type="hidden" name="studentNum" value="<%= viewData.student.studentNum %>" />
                    <div class="form-group">
                        <label for="firstName">First Name:</label>
                        <input class="form-control" id="firstName" name="firstName" type="text" value="<%= viewData.student.firstName %>" required>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name:</label>
                        <input class="form-control" id="lastName" name="lastName" type="text" value="<%= viewData.student.lastName %>" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input class="form-control" id="email" name="email" type="email" value="<%= viewData.student.email %>" required>
                    </div>
                    <div class="form-group">
                        <label for="addressStreet">Street:</label>
                        <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="<%= viewData.student.addressStreet %>">
                    </div>
                    <div class="form-group">
                        <label for="addressCity">City:</label>
                        <input class="form-control" id="addressCity" name="addressCity" type="text" value="<%= viewData.student.addressCity %>">
                    </div>
                    <div class="form-group">
                        <label for="addressProvince">Province:</label>
                        <input class="form-control" id="addressProvince" name="addressProvince" type="text" value="<%= viewData.student.addressProvince %>">
                    </div>
                    <div class="form-group">
                        <label for="status">Status:</label>
                        <select class="form-control" id="status" name="status">
                            <option value="Full Time" <%= viewData.student.status === "Full Time" ? "selected" : "" %>>Full Time</option>
                            <option value="Part Time" <%= viewData.student.status === "Part Time" ? "selected" : "" %>>Part Time</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="TA">Teaching Assistant:</label>
                        <select class="form-control" id="TA" name="TA">
                            <option value="true" <%= viewData.student.TA ? "selected" : "" %>>Yes</option>
                            <option value="false" <%= !viewData.student.TA ? "selected" : "" %>>No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="course">Course:</label>
                        <select class="form-control" id="course" name="course">
                            <% viewData.courses.forEach(c => { %>
                                <option value="<%= c.courseId %>" <%= c.selected ? "selected" : "" %>><%= c.courseCode %> - <%= c.courseDescription %></option>
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">Update Student</button>
                </form>
            <% } else { %>
                <div class="alert alert-warning text-center" role="alert">
                    <%= message || 'Student not found.' %>
                </div>
            <% } %>
        </div>
    </div>
</div>
