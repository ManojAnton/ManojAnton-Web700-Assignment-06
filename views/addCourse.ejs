<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Add Course</h2>
            <form method="POST" action="/courses/add">
                <div class="form-group">
                    <label for="courseCode">Course Code:</label>
                    <input class="form-control" id="courseCode" name="courseCode" type="text" required>
                </div>
                <div class="form-group">
                    <label for="courseDescription">Course Description:</label>
                    <textarea class="form-control" id="courseDescription" name="courseDescription" rows="4" required></textarea>
                </div>
                <button class="btn btn-primary btn-block mt-3" type="submit">Add Course</button>
            </form>
        </div>
    </div>
</div>
